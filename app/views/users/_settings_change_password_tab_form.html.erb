<%= form_with model: @user, url: update_password_path, local: true, method: :patch do |form| %>
  <%= hidden_field_tag :tab, @tab %>

  <div class="tab-pane fade active show" id="account-change-password">
    <div class="card-body pb-2">

      <div class="form-group">
        <%= form.label :current_password, class: "form-label" %>
        <%= form.password_field :current_password, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "New Password", class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control" %>
      </div>

    </div>
  </div>

  <div class="text-right my-3">
    <%= form.submit "Save Changes", class: "btn btn-primary" %>
  </div>
<% end %>
