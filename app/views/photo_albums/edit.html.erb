<div class="row my-5">
  <div class="col-lg-2"></div>

  <div class="col-lg-8">
    <%= bootstrap_flash %>
    <h1 class="text-center">Edit <%= @photo_album.name %></h1>

    <%= form_with model: @photo_album, local: true do |form| %>
      <div class="form-group mb-4">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group mb-4">
        <%= form.label :description, "Description (Optional)" %>
        <%= form.text_field :description, class: "form-control" %>
      </div>

      <div class="form-group mb-4">
        <%= form.label :images, "Add more images" %><br>
        <%= form.file_field :images, multiple: true, direct_upload: true %>
      </div>

      <div class="mt-3 text-right">
        <%= link_to "Cancel", photo_albums_path, class: "btn btn-secondary mr-2" %>
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-3">
      <hr>
      <h2>Uploaded Photos</h2>
      <% if !@photo_album.images.attached? %>
        <p class="text-muted">No photos have been uploaded to this album...</p>
      <% else %>
        <section id="gallery" class="gallery">
          <div class="container">
            <div class="row gallery-container">
              <% @photo_album.images.each do |image| %>
                <div class="col-lg-4 col-md-6 gallery-item">
                  <div class="gallery-wrap">
                    <%= image_tag(image, class: "img-fluid") %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </section>
      <% end %>
    </div>
  </div>

  <div class="col-lg-2"></div>
</div>
