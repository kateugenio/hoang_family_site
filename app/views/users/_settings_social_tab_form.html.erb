<%= form_with model: @user, url: update_settings_path, local: true, method: :patch do |form| %>
  <%= hidden_field_tag :tab, @tab %>
  <div class="tab-pane fade active show" id="account-social-links">
    <div class="card-body pb-2">
      <div class="form-group">
        <%= form.label :facebook, class: "form-label" %>
        <%= form.text_field :facebook, class: "form-control", placeholder: "e.g. www.facebook.com/user" %>
      </div>
      <div class="form-group">
        <%= form.label :instagram, class: "form-label" %>
        <%= form.text_field :instagram, class: "form-control", placeholder: "e.g. @instagramHandle" %>
      </div>
      <div class="form-group">
        <%= form.label :twitter, class: "form-label" %>
        <%= form.text_field :twitter, class: "form-control", placeholder: "e.g. @twitterHandle" %>
      </div>
      <div class="form-group">
        <%= form.label :linkedin, "LinkedIn", class: "form-label" %>
        <%= form.text_field :linkedin, class: "form-control", placeholder: "e.g. www.linkedin.com/in/johnsmith" %>
      </div>
    </div>
  </div>

  <div class="text-right my-3">
    <%= form.submit "Save Changes", class: "btn btn-primary" %>
  </div>
<% end %>
