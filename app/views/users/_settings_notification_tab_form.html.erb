<%= form_with model: @user, url: update_settings_path, local: true, method: :patch do |form| %>
  <%= hidden_field_tag :tab, @tab %>
  <div class="tab-pane fade active show" id="account-notifications">
    <div class="card-body pb-2">
      <div class="custom-control custom-checkbox">
        <%= form.check_box :is_notified_when_new_message_posted, class: "custom-control-input" %>
        <%= form.label :is_notified_when_new_message_posted, "Email me when someone posts a new message", class: "custom-control-label" %>
      </div>
    </div>
  </div>

  <div class="text-right my-3">
    <%= form.submit "Save Changes", class: "btn btn-primary" %>
  </div>
<% end %>
