<%= form_with model: @recipe, local: true do |form| %>
  <div class="form-group mb-4">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :ingredients %>
    <%= form.text_area :ingredients, class: "form-control trumbowyg-editor" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :directions %>
    <%= form.text_area :directions, class: "form-control trumbowyg-editor" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :category %>
    <%= form.select :category, Recipe::CATEGORIES, { include_blank: 'Choose one' }, class: "form-control custom-select" %>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :serving_size, "Serving Size (Optional)" %>
      <%= form.text_field :serving_size, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :total_cook_time, "Total Cook Time In Minutes (Optional)" %>
      <%= form.text_field :total_cook_time, class: "form-control" %>
    </div>
  </div>

  <div class="mt-3 float-right">
    <%= link_to "Cancel", recipes_path, class: "btn btn-secondary mr-2" %>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
