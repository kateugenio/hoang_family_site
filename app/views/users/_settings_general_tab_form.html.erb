<%= form_with model: @user, url: update_settings_path, local: true, method: :patch do |form| %>
  <%= hidden_field_tag :tab, @tab %>
  <div class="tab-pane fade active show" id="account-general">

  <div class="card-body media align-items-center">
    <%= default_or_uploaded_avatar(current_user, 200, 200) %>
    <div class="media-body ml-4">
      <div class="custom-file">
        <%= form.file_field :avatar, class: "custom-file-input", id: "customFile" %>
        <label class="custom-file-label" for="customFile">Upload new photo</label>
      </div>
    </div>
  </div>
  <hr class="border-light m-0">

  <div class="card-body">
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control mb-1" %>
    </div>
    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "form-control mb-1" %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control mb-1", disabled: true %>
    </div>
  </div>

  </div>

  <div class="text-right my-3">
    <%= form.submit "Save Changes", class: "btn btn-primary" %>
  </div>
<% end %>
